@model List<Company>
    <div class="container ">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Company List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                </svg> Create New Company
                </a>
            </div>
        </div>
    </div>
<table id="tblData" class="table table-bordered table-striped">
    <thead>
    <tr>
            <th class="text-center">
            Name
        </th>

            <th class="text-center">
                Street Address
        </th>
            <th class="text-center">
                State
        </th>

            <th class="text-center">
                City
        </th>
           </th>

           </th>

            <th class="text-center">
                Phone Number
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
       @foreach(var company in Model)
        {
            <tr>
                <td class="text-center">
                    @company.Name
                </td>
                <td class="text-center">
                    @company.StreetAddress
                </td>
                <td class="text-center">
                    @company.State
                </td>
              
                <td class="text-center">
                    @company.City
                </td> 
                <td class="text-center">
                    @company.PhoneNumber
                </td>
               

                <td>
                    <div class="w-75 btn-group " role="group">
                        <a asp-area="Admin" asp-controller="Company" asp-action="Upsert" asp-route-Id="@company.Id" class="btn btn-sm btn-primary mx-1 ">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-Id="@company.Id" class="btn btn-sm btn-danger mx-1 " >
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
            
        }  

    </tbody>
</table>
@section Scripts{
    <script src="~/js/company.js"></script>
}